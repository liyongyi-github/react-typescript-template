{
  "compilerOptions": {  
    "outDir": "./dist/",              
    "target": "es5",                        
    "module": "commonjs",                   
    "strict": true,     
    "jsx": "react",                     
    "esModuleInterop": true,  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "include": ["./src/**/*", "index.tsx"]
}
